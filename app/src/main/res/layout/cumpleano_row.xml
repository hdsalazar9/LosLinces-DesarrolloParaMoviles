<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/row_cumpleano_nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_cumpleano_row_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajedrez"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textview21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/row_cumpleano_telefono"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_cumpleano_row_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugar con Paco"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>