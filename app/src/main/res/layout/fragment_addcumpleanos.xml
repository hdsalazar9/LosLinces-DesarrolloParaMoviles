        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_addcumple_telefono" />

        <EditText
            android:id="@+id/et_fragment_addcumpleanos_telÃ©fono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="@string/fragment_addcumple_telefono_hint" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_addevento_tipo" />

        <EditText
            android:id="@+id/et_fragment_addcumpleanos_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_fragment_addcumpleanos_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_addcumple_add" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>