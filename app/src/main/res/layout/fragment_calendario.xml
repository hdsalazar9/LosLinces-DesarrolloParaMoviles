<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/calendario"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".72">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".28"
            android:gravity="bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_addEvento"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/calendario_boton"
                android:text="@string/fragment_calendario_add"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_eliminarTodosEventos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="@string/fragment_eventodisplay_eliminarTodosEventos"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>