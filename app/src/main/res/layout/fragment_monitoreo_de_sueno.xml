<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFCDD2"
    tools:context="itesm.mx.saludintegral.fragments.MonitoreoDeSuenoFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" >
        <Button
            android:id="@+id/button_Aceptar"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_above="@+id/button4"
            android:layout_centerHorizontal="true"
            android:background="#8BC34A"
            android:text="Aceptar"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_Canelar"
            android:layout_width="match_parent"
            android:layout_height="133dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#D32F2F"
            android:text="Cancelar"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Ingresar la cantidad de horas de sueÃ±o"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/editTextHorasSueno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_centerInParent="true"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:singleLine="true"/>

</RelativeLayout>
