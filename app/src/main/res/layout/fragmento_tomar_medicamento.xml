<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFCDD2"
    tools:context="itesm.mx.saludintegral.fragments.FragmentoTomarMedicamento">

    <TextView
        android:id="@+id/textView_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="31dp"
        android:layout_marginTop="28dp"
        android:layout_toStartOf="@+id/imageView_medicamento"
        android:text="Medicamento"
        android:textColor="@android:color/black"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView_medicamento"
        android:layout_width="93dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/textView_faltan"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        app:srcCompat="@drawable/pills" />


    <!--android:layout_alignEnd="@+id/imageView_medicamento"
        android:layout_below="@+id/textView_nombre"
        android:layout_marginEnd="62dp"-->
    <TextView
        android:id="@+id/textView_faltan"
        android:layout_width="254dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_nombre"
        android:layout_marginTop="30dp"
        android:text="Retraso"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="#D32F2F"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_cadaCuanto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_fecha"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:text="Frecuencia"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_gramaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView7"
        android:layout_marginTop="232dp"
        android:text="Gramaje"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_gramaje"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"
        android:text="Fecha"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_adComer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:text="A-D Comer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_gramaje"
        android:text="Cantidad"
        android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">
        <Button
            android:id="@+id/button_ingerido"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_above="@+id/button4"
            android:layout_centerHorizontal="true"
            android:background="#8BC34A"
            android:text="Ya la tomÃ©"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_borrar"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#D32F2F"
            android:text="Eliminar"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>
